<div class="min-h-screen w-full flex items-center justify-center bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-5xl relative">
    <div class="relative bg-gray-900 rounded-xl overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-teal-500/20 to-orange-500/20 rounded-xl"></div>
      <div class="p-8">
        <!-- Header -->
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold">
            <span class="bg-gradient-to-r from-teal-400 to-orange-400 text-transparent bg-clip-text">
              Agents List
            </span>
          </h2>
          <p class="mt-2 text-sm text-gray-400">
            View and manage all agents
          </p>
        </div>

        <!-- Agents Section -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @agents.each do |agent| %>
            <div class="bg-gray-800/50 rounded-lg p-6 border border-teal-800/50">
              <h3 class="text-xl font-semibold text-teal-300 mb-4">Agent Details</h3>
              
              <div class="space-y-3">
                <div>
                  <label class="block text-sm font-medium text-teal-300">ID</label>
                  <div class="text-white bg-gray-800/50 px-4 py-2 rounded-lg border border-teal-800/50">
                    <%= agent.id %>
                  </div>
                </div>

                <div>
                  <label class="block text-sm font-medium text-teal-300">Email</label>
                  <div class="text-white bg-gray-800/50 px-4 py-2 rounded-lg border border-teal-800/50">
                    <%= agent.email %>
                  </div>
                </div>
              </div>

              <div class="flex space-x-4 mt-4">
                <%= button_to "#", 
                  method: :get,
                  form: { class: "inline-flex" },
                  class: "group relative flex w-fit items-center justify-center gap-2 rounded-lg bg-teal-500 px-4 py-2 text-sm font-medium text-white hover:bg-teal-600 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2 focus:ring-offset-gray-900" do %>
                  <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  Edit
                <% end %>

                <%= button_to "#", 
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this agent?" },
                  form: { class: "inline-flex" },
                  class: "group relative flex w-fit items-center justify-center gap-2 rounded-lg bg-red-600 px-4 py-2 text-sm font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-gray-900" do %>
                  <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                  Delete
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
