<div class="min-h-screen w-full flex items-center justify-center bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md">
    <div class="relative bg-gray-900 rounded-xl overflow-hidden shadow-lg">
      <div class="absolute inset-0 bg-gradient-to-r from-teal-500/20 to-orange-500/20 rounded-xl"></div>
      <div class="relative p-8">
        <!-- Header -->
        <div class="text-center">
          <h2 class="text-3xl font-bold">
            <span class="bg-gradient-to-r from-teal-400 to-orange-400 text-transparent bg-clip-text">
              Welcome Back
            </span>
          </h2>
          <p class="mt-2 text-sm text-gray-400">
            Sign in to your account to continue
          </p>
        </div>

        <!-- Form -->
        <%= form_with url: login_path, method: :post, local: true, html: { class: "mt-8 space-y-6" } do |f| %>
          <div class="space-y-5">
            <!-- Email -->
            <div>
              <%= f.label :email, "Email", class: "block text-sm font-medium text-teal-300 mb-2" %>
              <div class="relative rounded-lg">
                <%= f.email_field :email,
                  class: "block w-full pl-4 pr-4 py-3 border border-teal-800/50 rounded-lg bg-gray-800/50 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent",
                  placeholder: "your@email.com",
                  required: true,
                  autocomplete: "email" %>
              </div>
            </div>

            <!-- Password -->
            <div>
              <%= f.label :password, "Password", class: "block text-sm font-medium text-teal-300 mb-2" %>
              <div class="relative rounded-lg">
                <%= f.password_field :password,
                  class: "block w-full pl-4 pr-4 py-3 border border-teal-800/50 rounded-lg bg-gray-800/50 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent",
                  placeholder: "••••••••",
                  required: true,
                  autocomplete: "current-password" %>
              </div>
            </div>

            <!-- Remember me -->
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <%= f.check_box :remember_me, 
                  class: "h-4 w-4 rounded bg-gray-800 border-teal-800/50 text-orange-500 focus:ring-orange-500 focus:ring-offset-gray-900" %>
                <%= f.label :remember_me, "Remember me", class: "ml-2 block text-sm text-teal-300" %>
              </div>
              <%= link_to "Forgot password?", "#",
                class: "text-sm text-orange-400 hover:text-orange-300 transition-colors duration-200" %>
            </div>

            <!-- Submit button -->
            <div>
              <%= f.submit "Sign in",
                class: "w-full px-4 py-3 rounded-lg bg-gradient-to-r from-orange-500 to-orange-600 text-white font-medium hover:from-orange-600 hover:to-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 focus:ring-offset-gray-900 transition-all duration-200" %>
            </div>
          </div>
        <% end %>

        <!-- Sign up link -->
        <div class="mt-6 text-center text-sm">
          <span class="text-gray-400">Don't have an account?</span>
          <%= link_to "Sign up", '#',
            class: "ml-1 text-orange-400 hover:text-orange-300 transition-colors duration-200" %>
        </div>
      </div>
    </div>
  </div>
</div>
