<div class="min-h-screen w-full flex items-center justify-center bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
 <div class="w-full max-w-md relative">
    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-r from-teal-600/10 to-orange-600/10 rounded-xl transform rotate-6 transition-transform"></div>
    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-l from-teal-600/10 to-orange-600/10 rounded-xl transform -rotate-6 transition-transform"></div>

    <div class="relative bg-gray-900 rounded-xl overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-teal-500/20 to-orange-500/20 rounded-xl"></div>
      <div class="p-8">
        <%# Header %>
        <div class="text-center">
          <h2 class="text-3xl font-bold">
            <span class="bg-gradient-to-r from-teal-400 to-orange-400 text-transparent bg-clip-text">
              Welcome Back
            </span>
          </h2>
          <p class="mt-2 text-sm text-gray-400">
            Sign in to your account to continue
          </p>
        </div>

        <%# Form %>
        <%= form_for :login, url: login_path, html: { class: "mt-8 space-y-6" } do |f| %>
          <div class="space-y-5">
            <div>
              <%= f.label :email, class: "block text-sm font-medium text-teal-300 mb-2" %>
              <div class="relative rounded-lg">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-teal-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                  </svg>
                </div>
                <%= f.email_field :email, 
                    class: "block w-full pl-10 pr-4 py-3 border border-teal-800/50 rounded-lg bg-gray-800/50 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent",
                    placeholder: "your@email.com",
                    required: true,
                    autocomplete: "email" %>
              </div>
            </div>

            <div>
              <%= f.label :password, class: "block text-sm font-medium text-teal-300 mb-2" %>
              <div class="relative rounded-lg">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-teal-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                  </svg>
                </div>
                <%= f.password_field :password,
                    class: "block w-full pl-10 pr-4 py-3 border border-teal-800/50 rounded-lg bg-gray-800/50 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent",
                    placeholder: "••••••••",
                    required: true,
                    autocomplete: "current-password" %>
              </div>
            </div>

            <%# Remember me checkbox %>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <%= f.check_box :remember_me, 
                    class: "h-4 w-4 rounded bg-gray-800 border-teal-800/50 text-orange-500 focus:ring-orange-500 focus:ring-offset-gray-900" %>
                <%= f.label :remember_me, "Remember me", class: "ml-2 block text-sm text-teal-300" %>
              </div>

              <%= link_to "Forgot password?", "#", 
                  class: "text-sm text-orange-400 hover:text-orange-300 transition-colors duration-200" %>
            </div>

            <%# Submit button %>
            <%= f.button type: :submit,
                class: "w-full px-4 py-3 mt-6 rounded-lg bg-gradient-to-r from-orange-500 to-orange-600 text-white font-medium hover:from-orange-600 hover:to-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 focus:ring-offset-gray-900 transition-all duration-200" do %>
              Sign in
            <% end %>
          </div>
        <% end %>

        <%# Sign up link %>
        <div class="mt-6 text-center text-sm">
          <span class="text-gray-400">Don't have an account?</span>
          <%= link_to "Sign up",'#', 
              class: "ml-1 text-orange-400 hover:text-orange-300 transition-colors duration-200" %>
        </div>
      </div>
    </div>
  </div>
</div>
